<!-- Vertical Navigation Bar -->
<div class="h-screen w-64 bg-gradient-to-b from-blue-600 to-blue-800 text-white shadow-lg fixed left-0 top-0">
  <div class="p-4">
    <!-- Logo/Brand -->
    <div class="flex items-center space-x-2 mb-8">
      <div class="w-8 h-8 bg-white rounded-full flex items-center justify-center">
        <span class="text-blue-600 font-bold text-xl">F</span>
      </div>
      <span class="font-semibold text-lg">FinManage</span>
    </div>

    <!-- Navigation Links -->
    <nav class="space-y-2">
      <!-- Dashboard -->
      <a href="/companyRep/dashboard" 
         class="<%= currentPage === 'dashboard' ? 'bg-white/10' : 'hover:bg-white/5' %> flex items-center space-x-3 px-4 py-3 rounded-md transition-all duration-200 w-full">
        <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 12l2-2m0 0l7-7 7 7M5 10v10a1 1 0 001 1h3m10-11l2 2m-2-2v10a1 1 0 01-1 1h-3m-6 0a1 1 0 001-1v-4a1 1 0 011-1h2a1 1 0 011 1v4a1 1 0 001 1m-6 0h6"/>
        </svg>
        <span class="text-sm font-medium">Dashboard</span>
      </a>

      <!-- My Company -->
      <a href="/companyRep/my-company" 
         class="<%= currentPage === 'myCompany' ? 'bg-white/10' : 'hover:bg-white/5' %> flex items-center space-x-3 px-4 py-3 rounded-md transition-all duration-200 w-full">
        <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 7h18M3 12h18M3 17h18"/>
        </svg>
        <span class="text-sm font-medium">My Company</span>
      </a>

      <!-- Recent Stock Transaction -->
      <a href="/companyRep/recent-stock-transaction" 
         class="<%= currentPage === 'recentStock' ? 'bg-white/10' : 'hover:bg-white/5' %> flex items-center space-x-3 px-4 py-3 rounded-md transition-all duration-200 w-full">
        <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M13 7h8m0 0v8m0-8l-8 8-4-4-6 6"/>
        </svg>
        <span class="text-sm font-medium">Recent Stock Transaction</span>
      </a>

      <!-- User Profile -->
      <div class="absolute bottom-0 left-0 w-full p-4 border-t border-white/10">
        <div class="flex items-center space-x-3 mb-4">
          <div class="w-10 h-10 bg-gradient-to-br from-white to-blue-100 rounded-full flex items-center justify-center">
            <span class="text-blue-600 font-semibold">IN</span>
          </div>
          <div>
            <div class="text-sm font-medium">Investor</div>
            <div class="text-xs text-blue-200">investor@finmanage.com</div>
          </div>
        </div>
        
        <a href="/login" 
           class="flex items-center space-x-3 px-4 py-3 rounded-md bg-red-500/10 hover:bg-red-500/20 transition-all duration-200 w-full text-red-100">
          <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17 16l4-4m0 0l-4-4m4 4H7m6 4v1a3 3 0 01-3 3H6a3 3 0 01-3-3V7a3 3 0 013-3h4a3 3 0 013 3v1"/>
          </svg>
          <span class="text-sm font-medium">Log Out</span>
        </a>
      </div>
    </nav>
  </div>
</div>

