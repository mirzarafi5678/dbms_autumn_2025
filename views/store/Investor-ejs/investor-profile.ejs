<%- include('../../partials/head') %>
<script src="https://cdn.jsdelivr.net/npm/chart.js"></script>
</head>

<body class="bg-gradient-to-br from-slate-900 via-blue-900 to-slate-900 min-h-screen text-white">
  <%- include('../../partials/Investor-nav') %>

  <div class="flex justify-center items-center min-h-screen">
    <div class="bg-slate-800 p-8 rounded-2xl shadow-lg w-full max-w-md">
      <h2 class="text-2xl font-bold mb-6 text-center">Investor Details</h2>

      <form id="investorForm" class="space-y-4">
        <div>
          <label for="id" class="block text-sm font-semibold mb-1">Investor ID</label>
          <input type="text" id="id" name="id" class="w-full p-2 rounded bg-slate-700 border border-slate-600" />
        </div>

        <div>
          <label for="name" class="block text-sm font-semibold mb-1">Name</label>
          <input type="text" id="name" name="name" class="w-full p-2 rounded bg-slate-700 border border-slate-600" />
        </div>

        <div>
          <label for="contact" class="block text-sm font-semibold mb-1">Contact</label>
          <input type="text" id="contact" name="contact" class="w-full p-2 rounded bg-slate-700 border border-slate-600" />
        </div>

        <button type="button" id="saveBtn" class="w-full bg-blue-600 hover:bg-blue-700 py-2 rounded font-semibold transition">
          Save
        </button>

        <p id="message" class="text-green-400 text-center mt-4 hidden font-medium">âœ… Successfully Saved!</p>
      </form>
    </div>
  </div>

  <script>
    // Example: userdetails object coming from backend
    const userdetails = <%- JSON.stringify(userdetails) %>;

    // Pre-fill the text fields if data exists
    if (userdetails) {
      document.getElementById('id').value = userdetails.id || '';
      document.getElementById('name').value = userdetails.name || '';
      document.getElementById('contact').value = userdetails.contact || '';
    }

    // Handle Save button click
    document.getElementById('saveBtn').addEventListener('click', () => {
      // Here you could send data to backend using fetch()
      // For now, just show success message
      const msg = document.getElementById('message');
      msg.classList.remove('hidden');

      // Hide after 2 seconds
      setTimeout(() => {
        msg.classList.add('hidden');
      }, 2000);
    });
  </script>
</body>
</html>
