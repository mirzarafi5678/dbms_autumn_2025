<%- include('../../partials/head') %>
</head>
<body class="bg-gradient-to-br from-slate-900 via-blue-900 to-slate-900 min-h-screen text-white">
  <%- include('../../partials/admin-nav') %>

  <div class="container mx-auto p-6">
    <h1 class="text-3xl font-bold mb-6 text-center">Stock Price Predictions</h1>

    <!-- Search bar -->
    <div class="flex justify-between mb-4">
      <form method="GET" action="/admin/predictions/search" class="flex gap-2">
        <input type="text" name="query" placeholder="Search by Stock ID..." 
               class="px-3 py-2 rounded-lg text-black" />
        <button type="submit" class="bg-blue-600 px-4 py-2 rounded-lg hover:bg-blue-700">Search</button>
      </form>
       <a href="/Admin/Prediction-of-Stock-Price" 
   class="bg-green-600 px-4 py-2 rounded-lg hover:bg-green-700">
               Show ALL
         </a>
      <!-- Add button -->
      <button onclick="openAddModal()" class="bg-green-600 px-4 py-2 rounded-lg hover:bg-green-700">
        Add Prediction
      </button>
    </div>

    <!-- Table -->
    <div class="overflow-x-auto">
      <table class="min-w-full border border-gray-700 rounded-lg">
        <thead class="bg-blue-800 text-white">
          <tr>
            <th class="px-4 py-2 ">Prediction ID</th>
            <th class="px-4 py-2 r">Stock ID</th>
            <th class="px-4 py-2 ">Predicted Price</th>
            <th class="px-4 py-2 ">Date</th>
            <th class="px-4 py-2 ">Accuracy Score</th>
            <th class="px-4 py-2 ">Actions</th>
          </tr>
        </thead>
        <tbody>
          <% if (PredictionList && PredictionList.length > 0) { %>
            <% PredictionList.forEach(prediction => { %>
              <tr class="hover:bg-slate-800 transition">
                <td class="px-4 py-2 border"><%= prediction.id %></td>
                <td class="px-4 py-2 border"><%= prediction.Stockid %></td>
                <td class="px-4 py-2 border"><%= prediction.predictedPrice %></td>
                <td class="px-4 py-2 border"><%= prediction.date %></td>
                <td class="px-4 py-2 border"><%= prediction.accuracyScore %></td>
                <td class="px-4 py-2 border flex gap-2">
                  <button onclick="openEditModal(<%= JSON.stringify(prediction) %>)"
                          class="bg-yellow-500 px-3 py-1 rounded-lg hover:bg-yellow-600">
                    Edit
                  </button>

                  <form action="/admin/predictions/delete/<%= prediction.id %>" method="POST">
                    <button type="submit" class="bg-red-600 px-3 py-1 rounded-lg hover:bg-red-700">
                      Delete
                    </button>
                  </form>
                </td>
              </tr>
            <% }) %>
          <% } else { %>
            <tr>
              <td colspan="6" class="text-center py-4">No predictions available</td>
            </tr>
          <% } %>
        </tbody>
      </table>
    </div>
  </div>

  <!-- Add Modal -->
  <div id="addModal" class="hidden fixed inset-0 bg-black bg-opacity-50 flex justify-center items-center">
    <div class="bg-slate-800 p-6 rounded-lg w-96">
      <h2 class="text-xl mb-4">Add New Prediction</h2>
      <form method="POST" action="/admin/predictions/add">
        <input type="text" name="Stockid" placeholder="Stock ID" class="w-full p-2 mb-3 rounded text-black" required>
        <input type="number" name="predictedPrice" placeholder="Predicted Price" class="w-full p-2 mb-3 rounded text-black" required>
        <input type="date" name="date" class="w-full p-2 mb-3 rounded text-black" required>
        <input type="number" step="0.01" name="accuracyScore" placeholder="Accuracy Score" class="w-full p-2 mb-3 rounded text-black" required>

        <div class="flex justify-end gap-2">
          <button type="button" onclick="closeAddModal()" class="bg-gray-600 px-3 py-1 rounded-lg hover:bg-gray-700">Cancel</button>
          <button type="submit" class="bg-green-600 px-3 py-1 rounded-lg hover:bg-green-700">Save</button>
        </div>
      </form>
    </div>
  </div>

  <!-- Edit Modal -->
  <div id="editModal" class="hidden fixed inset-0 bg-black bg-opacity-50 flex justify-center items-center">
    <div class="bg-slate-800 p-6 rounded-lg w-96">
      <h2 class="text-xl mb-4">Edit Prediction</h2>
      <form id="editForm" method="POST">
        <input type="text" name="Stockid" id="editStockid" placeholder="Stock ID" class="w-full p-2 mb-3 rounded text-black" readonly>
        <input type="number" name="predictedPrice" id="editPredictedPrice" placeholder="Predicted Price" class="w-full p-2 mb-3 rounded text-black" required>
        <input type="date" name="date" id="editDate" class="w-full p-2 mb-3 rounded text-black" required>
        <input type="number" step="0.01" name="accuracyScore" id="editAccuracyScore" placeholder="Accuracy Score" class="w-full p-2 mb-3 rounded text-black" required>

        <div class="flex justify-end gap-2">
          <button type="button" onclick="closeEditModal()" class="bg-gray-600 px-3 py-1 rounded-lg hover:bg-gray-700">Cancel</button>
          <button type="submit" class="bg-yellow-500 px-3 py-1 rounded-lg hover:bg-yellow-600">Update</button>
        </div>
      </form>
    </div>
  </div>

  <script>
   
    // --- Add Modal ---
    function openAddModal() {
      document.getElementById('addModal').classList.remove('hidden');
    }
    function closeAddModal() {
      document.getElementById('addModal').classList.add('hidden');
    }

    // --- Edit Modal ---
    function openEditModal(prediction) {
      document.getElementById('editStockid').value = prediction.Stockid;
      document.getElementById('editPredictedPrice').value = prediction.predictedPrice;
      document.getElementById('editDate').value = prediction.date;
      document.getElementById('editAccuracyScore').value = prediction.accuracyScore;

      document.getElementById('editForm').action = `/admin/predictions/edit/${prediction.Stockid}`;
      document.getElementById('editModal').classList.remove('hidden');
    }
    function closeEditModal() {
      document.getElementById('editModal').classList.add('hidden');
    }
  </script>
</body>
</html>
