<%- include('../../partials/head') %>
</head>
<body class="bg-gradient-to-br from-slate-900 via-blue-900 to-slate-900 min-h-screen text-white">
  <%- include('../../partials/admin-nav') %>

  <div class="container mx-auto p-6">
    <h1 class="text-3xl font-bold mb-6 text-center">Price History Management</h1>

    <!-- Search bar -->
    <div class="flex justify-between mb-4">
      <form method="GET" action="/Admin/price-history/search" class="flex gap-2">
        <input type="text" name="query" placeholder="Search by Registration Number..." 
               class="px-3 py-2 rounded-lg text-black" />
        <button type="submit" class="bg-blue-600 px-4 py-2 rounded-lg hover:bg-blue-700">Search</button>
      </form>

      <!-- Add button -->
      <button onclick="openAddModal()" class="bg-green-600 px-4 py-2 rounded-lg hover:bg-green-700">
        Add Price Record
      </button>
    </div>

    <!-- Table -->
    <div class="overflow-x-auto">
      <table class="min-w-full border border-gray-700 rounded-lg">
        <thead class="bg-blue-800 text-white">
          <tr>
            <th class="px-4 py-2 border">registrationNumber</th>
            <th class="px-4 py-2 border">stockId</th>
            <th class="px-4 py-2 border">timestamp</th>
            <th class="px-4 py-2 border">open</th>
            <th class="px-4 py-2 border">close</th>
            <th class="px-4 py-2 border">high</th>
            <th class="px-4 py-2 border">low</th>
            <th class="px-4 py-2 border">Actions</th>
          </tr>
        </thead>
        <tbody>
          <% if (PriceList && PriceList.length > 0) { %>
            <% PriceList.forEach(function(p) { %>
              <tr class="border-b border-slate-700 hover:bg-slate-700">
                <td class="py-2 px-4"><%= p.registrationNumber %></td>
                <td class="py-2 px-4"><%= p.stockId %></td>
                <td class="py-2 px-4"><%= p.timestamp %></td>
                <td class="py-2 px-4"><%= p.open %></td>
                <td class="py-2 px-4"><%= p.close %></td>
                <td class="py-2 px-4"><%= p.high %></td>
                <td class="py-2 px-4"><%= p.low %></td>
                <td class="py-2 px-4 flex gap-2">
                  <button onclick='openEditModal(<%= JSON.stringify(p) %>)'
                          class="bg-yellow-500 px-3 py-1 rounded-lg hover:bg-yellow-600">
                    Edit
                  </button>

                  <form action="/Admin/price-history/delete/<%= p.registrationNumber %>" method="POST">
                    <button type="submit" class="bg-red-600 px-3 py-1 rounded-lg hover:bg-red-700">
                      Delete
                    </button>
                  </form>
                </td>
              </tr>
            <% }) %>
          <% } else { %>
            <tr>
              <td colspan="7" class="text-center py-4">No price history records available</td>
            </tr>
          <% } %>
        </tbody>
      </table>
    </div>
  </div>

  <!-- Add Modal -->
  <div id="addModal" class="hidden fixed inset-0 bg-black bg-opacity-50 flex justify-center items-center">
    <div class="bg-slate-800 p-6 rounded-lg w-96">
      <h2 class="text-xl mb-4">Add New Price Record</h2>
      <form method="POST" action="/Admin/price-history/add">
        <input type="text" name="registrationNumber" placeholder="registrationNumber" class="w-full p-2 mb-3 rounded text-black" required>
        <input type="text" name="stockId" placeholder="stockId" class="w-full p-2 mb-3 rounded text-black" required>
        <input type="datetime-local" name="timestamp" class="w-full p-2 mb-3 rounded text-black" required>
        <input type="number" step="0.01" name="open" placeholder="open" class="w-full p-2 mb-3 rounded text-black" required>
        <input type="number" step="0.01" name="close" placeholder="close" class="w-full p-2 mb-3 rounded text-black" required>
        <input type="number" step="0.01" name="high" placeholder="high" class="w-full p-2 mb-3 rounded text-black">
        <input type="number" step="0.01" name="low" placeholder="low" class="w-full p-2 mb-3 rounded text-black">

        <div class="flex justify-end gap-2">
          <button type="button" onclick="closeAddModal()" class="bg-gray-600 px-3 py-1 rounded-lg hover:bg-gray-700">Cancel</button>
          <button type="submit" class="bg-green-600 px-3 py-1 rounded-lg hover:bg-green-700">Save</button>
        </div>
      </form>
    </div>
  </div>

  <!-- Edit Modal -->
  <div id="editModal" class="hidden fixed inset-0 bg-black bg-opacity-50 flex justify-center items-center">
    <div class="bg-slate-800 p-6 rounded-lg w-96">
      <h2 class="text-xl mb-4">Edit Price Record</h2>
      <form id="editForm" method="POST">
        <input type="text" name="registrationNumber" id="editRegistrationNumber" placeholder="registrationNumber" class="w-full p-2 mb-3 rounded text-black" readonly required>
        <input type="text" name="stockId" id="editStockId" placeholder="stockId" class="w-full p-2 mb-3 rounded text-black" readonly required>
        <input type="datetime-local" name="timestamp" id="editTimestamp" placeholder="timestamp" class="w-full p-2 mb-3 rounded text-black" readonly required>
        <input type="number" step="0.01" name="open" id="editOpen" placeholder="open" class="w-full p-2 mb-3 rounded text-black" required>
        <input type="number" step="0.01" name="close" id="editClose" placeholder="close" class="w-full p-2 mb-3 rounded text-black" required>
        <input type="number" step="0.01" name="high" id="editHigh" placeholder="high" class="w-full p-2 mb-3 rounded text-black">
        <input type="number" step="0.01" name="low" id="editLow" placeholder="low" class="w-full p-2 mb-3 rounded text-black">

        <div class="flex justify-end gap-2">
          <button type="button" onclick="closeEditModal()" class="bg-gray-600 px-3 py-1 rounded-lg hover:bg-gray-700">Cancel</button>
          <button type="submit" class="bg-yellow-500 px-3 py-1 rounded-lg hover:bg-yellow-600">Update</button>
        </div>
      </form>
    </div>
  </div>

  <script>
    // --- Add Modal ---
    function openAddModal() {
      document.getElementById('addModal').classList.remove('hidden');
    }
    function closeAddModal() {
      document.getElementById('addModal').classList.add('hidden');
    }

    // --- Edit Modal ---
    function openEditModal(p) {
      document.getElementById('editRegistrationNumber').value = p.registrationNumber || '';
      document.getElementById('editStockId').value = p.stockId || '';
      document.getElementById('editTimestamp').value = p.timestamp || '';
      document.getElementById('editOpen').value = p.open || '';
      document.getElementById('editClose').value = p.close || '';
      document.getElementById('editHigh').value = p.high || '';
      document.getElementById('editLow').value = p.low || '';

      // Use stockId as identifier for edit (backend will also match registrationNumber & timestamp if provided)
      document.getElementById('editForm').action = `/Admin/price-history/edit/${p.stockId}`;
      document.getElementById('editModal').classList.remove('hidden');
    }
    function closeEditModal() {
      document.getElementById('editModal').classList.add('hidden');
    }
  </script>
</body>
</html>
