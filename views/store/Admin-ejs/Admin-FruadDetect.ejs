<%- include('../../partials/head') %>
</head>
<body class="bg-gradient-to-br from-slate-900 via-blue-900 to-slate-900 min-h-screen text-white">
	<%- include('../../partials/admin-nav') %>
  

	<div class="container mx-auto px-4 py-8">
		<div>
			<h2 class="text-2xl font-bold mb-4">Fraud Alerts</h2>
			<div class="mb-4 flex justify-between items-center">
				<div class="flex items-center space-x-2">
					<input type="text" placeholder="Search Fraud Alerts..." class="w-64 px-4 py-2 rounded-lg text-black focus:outline-none focus:ring-2 focus:ring-blue-500" id="fraudSearch">
					<button id="fraudSearchBtn" class="bg-blue-600 hover:bg-blue-700 text-white px-4 py-2 rounded-lg font-medium transition-all duration-200 flex items-center">
						<svg class="w-5 h-5 mr-1" fill="none" stroke="currentColor" viewBox="0 0 24 24">
							<circle cx="11" cy="11" r="8" stroke="currentColor" stroke-width="2"/>
							<path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M21 21l-4.35-4.35" />
						</svg>
						Search
					</button>
				</div>

				<div>
					<button id="openFraudAdd" class="bg-green-600 hover:bg-green-700 text-white px-4 py-2 rounded-lg font-semibold transition-all duration-200">
						Add Fraud Alert
					</button>
				</div>
			</div>
			<div class="overflow-x-auto rounded-lg shadow">
				<table class="min-w-full bg-slate-800">
					<thead>
						<tr class="bg-blue-900 text-white">
							<th class="py-3 px-4 text-left">Alert ID</th>
							<th class="py-3 px-4 text-left">Transaction ID</th>
							<th class="py-3 px-4 text-left">Risk Score</th>
							<th class="py-3 px-4 text-left">Detection Date</th>
							<th class="py-3 px-4 text-left">Action</th>
						</tr>
					</thead>
					<tbody id="fraudTableBody">
						<% FraudList.forEach(function(a) { %>
							<tr class="border-b border-slate-700 hover:bg-slate-700">
								<td class="py-2 px-4"><%= a.alertId %></td>
								<td class="py-2 px-4"><%= a.transactionId %></td>
								<td class="py-2 px-4"><%= a.riskScore %></td>
								<td class="py-2 px-4"><%= a.detectionDate %></td>
								<td class="py-2 px-4">
									<button class="edit-fraud bg-blue-600 hover:bg-blue-700 text-white px-3 py-1 rounded mr-2"
													data-alertid="<%= a.alertId %>" data-transactionid="<%= a.transactionId %>" data-riskscore="<%= a.riskScore %>" data-detectiondate="<%= a.detectionDate %>">
										Edit
									</button>
									<button class="delete-fraud bg-red-600 hover:bg-red-700 text-white px-3 py-1 rounded">Delete</button>
								</td>
							</tr>
						<% }) %>
					</tbody>
				</table>
			</div>
		</div>
	</div>

	<!-- Fraud Add Modal -->
	<div id="fraudModal" class="fixed inset-0 z-50 hidden items-center justify-center">
		<div class="absolute inset-0 bg-black/50" data-close-target="fraudModal"></div>
		<div class="bg-white rounded-lg shadow-lg w-full max-w-md mx-4 z-10 overflow-hidden">
			<div class="flex justify-between items-center px-4 py-3 border-b">
				<h3 class="text-lg font-semibold text-slate-900">Add Fraud Alert</h3>
				<button class="text-slate-600 hover:text-slate-900" data-close-target="fraudModal">✕</button>
			</div>
			<form id="fraudForm" action="/fraud/add" method="POST" class="px-4 py-4 space-y-3">
				<div>
					<label class="text-sm text-slate-700">Alert ID</label>
					<input name="alertId" required class="w-full px-3 py-2 rounded border" />
				</div>
				<div>
					<label class="text-sm text-slate-700">Transaction ID</label>
					<input name="transactionId" required class="w-full px-3 py-2 rounded border" />
				</div>
				<div>
					<label class="text-sm text-slate-700">Risk Score</label>
					<input name="riskScore" type="number" step="0.01" class="w-full px-3 py-2 rounded border" />
				</div>
				<div>
					<label class="text-sm text-slate-700">Detection Date</label>
					<input name="detectionDate" type="date" required class="w-full px-3 py-2 rounded border" />
				</div>
				<div class="pt-2 flex justify-end space-x-2">
					<button type="button" class="px-4 py-2 rounded border" data-close-target="fraudModal">Cancel</button>
					<button type="submit" class="px-4 py-2 bg-blue-600 text-white rounded">Submit</button>
				</div>
			</form>
		</div>
	</div>

	<!-- Fraud Edit Modal -->
	<div id="fraudEditModal" class="fixed inset-0 z-50 hidden items-center justify-center">
		<div class="absolute inset-0 bg-black/50" data-close-target="fraudEditModal"></div>
		<div class="bg-white rounded-lg shadow-lg w-full max-w-md mx-4 z-10 overflow-hidden">
			<div class="flex justify-between items-center px-4 py-3 border-b">
				<h3 class="text-lg font-semibold text-slate-900">Edit Fraud Alert</h3>
				<button class="text-slate-600 hover:text-slate-900" data-close-target="fraudEditModal">✕</button>
			</div>
			<form id="fraudEditForm" action="/fraud/edit" method="POST" class="px-4 py-4 space-y-3">
				<input type="hidden" name="originalAlertId" />
				<div>
					<label class="text-sm text-slate-700">Alert ID</label>
					<input name="alertId" required class="w-full px-3 py-2 rounded border" />
				</div>
				<div>
					<label class="text-sm text-slate-700">Transaction ID</label>
					<input name="transactionId" required class="w-full px-3 py-2 rounded border" />
				</div>
				<div>
					<label class="text-sm text-slate-700">Risk Score</label>
					<input name="riskScore" type="number" step="0.01" class="w-full px-3 py-2 rounded border" />
				</div>
				<div>
					<label class="text-sm text-slate-700">Detection Date</label>
					<input name="detectionDate" type="date" required class="w-full px-3 py-2 rounded border" />
				</div>
				<div class="pt-2 flex justify-end space-x-2">
					<button type="button" class="px-4 py-2 rounded border" data-close-target="fraudEditModal">Cancel</button>
					<button type="submit" class="px-4 py-2 bg-blue-600 text-white rounded">Save</button>
				</div>
			</form>
		</div>
	</div>

	<script>
		// Modal open/close handlers
		function openModal(id) {
			const modal = document.getElementById(id);
			if (!modal) return;
			modal.classList.remove('hidden');
			modal.classList.add('flex');
		}
		function closeModal(id) {
			const modal = document.getElementById(id);
			if (!modal) return;
			modal.classList.remove('flex');
			modal.classList.add('hidden');
		}

		document.getElementById('openFraudAdd')?.addEventListener('click', () => openModal('fraudModal'));

		// Close when clicking overlay or buttons with data-close-target
		document.querySelectorAll('[data-close-target]').forEach(el => {
			el.addEventListener('click', (e) => {
				const target = e.currentTarget.getAttribute('data-close-target');
				if (target) closeModal(target);
				else {
					const parent = e.currentTarget.closest('.fixed');
					if (parent && parent.id) closeModal(parent.id);
				}
			});
		});

		// Close on Escape
		document.addEventListener('keydown', (e) => {
			if (e.key === 'Escape') {
				closeModal('fraudModal');
				closeModal('fraudEditModal');
			}
		});

		// Submit handlers - try AJAX then fallback to default submit
		async function handleFormSubmit(e, tableBodyId, fields) {
			e.preventDefault();
			const form = e.target;
			const action = form.action || window.location.href;
			const formData = new FormData(form);
			try {
				const resp = await fetch(action, { method: 'POST', body: formData, credentials: 'same-origin' });
				if (resp.ok) {
					let data;
					try { data = await resp.json(); } catch (err) { data = null; }
					const values = data || Object.fromEntries(formData.entries());
					appendRow(tableBodyId, fields, values);
					const modalId = form.id === 'fraudForm' ? 'fraudModal' : 'fraudEditModal';
					closeModal(modalId);
					form.reset();
				} else {
					form.submit();
				}
			} catch (err) {
				form.submit();
			}
		}

		function appendRow(tableBodyId, fields, values) {
			const tbody = document.getElementById(tableBodyId);
			if (!tbody) return;
			const tr = document.createElement('tr');
			tr.className = 'border-b border-slate-700 hover:bg-slate-700 text-white';
			fields.forEach(f => {
				const td = document.createElement('td');
				td.className = 'py-2 px-4';
				td.textContent = values[f] ?? '';
				tr.appendChild(td);
			});
			const actionTd = document.createElement('td');
			actionTd.className = 'py-2 px-4';
			const alertId = values['alertId'] ?? '';
			const transactionId = values['transactionId'] ?? '';
			const riskScore = values['riskScore'] ?? '';
			const detectionDate = values['detectionDate'] ?? '';
			actionTd.innerHTML = `
				<button class="edit-fraud bg-blue-600 hover:bg-blue-700 text-white px-3 py-1 rounded mr-2" data-alertid="${alertId}" data-transactionid="${transactionId}" data-riskscore="${riskScore}" data-detectiondate="${detectionDate}">Edit</button>
				<button class="delete-fraud bg-red-600 hover:bg-red-700 text-white px-3 py-1 rounded">Delete</button>
			`;
			tr.appendChild(actionTd);
			tbody.appendChild(tr);
		}

		document.getElementById('fraudForm')?.addEventListener('submit', (e) => handleFormSubmit(e, 'fraudTableBody', ['alertId','transactionId','riskScore','detectionDate']));

		// Edit modal handlers: delegation to support existing and appended rows
		document.getElementById('fraudTableBody')?.addEventListener('click', (e) => {
			const btn = e.target.closest('.edit-fraud');
			if (!btn) return;
			const alertId = btn.getAttribute('data-alertid');
			const transactionId = btn.getAttribute('data-transactionid');
			const riskScore = btn.getAttribute('data-riskscore');
			const detectionDate = btn.getAttribute('data-detectiondate');
			const form = document.getElementById('fraudEditForm');
			form.originalAlertId.value = alertId;
			form.alertId.value = alertId;
			form.transactionId.value = transactionId;
			form.riskScore.value = riskScore;
			form.detectionDate.value = detectionDate;
			openModal('fraudEditModal');
		});

		// Edit form submit - updates existing row instead of appending
		async function handleEditSubmit(e, tableBodyId, idField, fields) {
			e.preventDefault();
			const form = e.target;
			const action = form.action || window.location.href;
			const formData = new FormData(form);
			try {
				const resp = await fetch(action, { method: 'POST', body: formData, credentials: 'same-origin' });
				if (resp.ok) {
					let data;
					try { data = await resp.json(); } catch (err) { data = null; }
					const values = data || Object.fromEntries(formData.entries());
					updateRow(tableBodyId, idField, formData.get('originalAlertId'), values, fields);
					const modalId = form.id === 'fraudEditForm' ? 'fraudEditModal' : 'fraudModal';
					closeModal(modalId);
					form.reset();
				} else {
					form.submit();
				}
			} catch (err) {
				form.submit();
			}
		}

		function updateRow(tableBodyId, idField, originalId, values, fields) {
			const tbody = document.getElementById(tableBodyId);
			if (!tbody) return;
			const rows = Array.from(tbody.querySelectorAll('tr'));
			for (const row of rows) {
				const firstCell = row.querySelector('td');
				if (!firstCell) continue;
				if (String(firstCell.textContent).trim() === String(originalId).trim()) {
					const tds = row.querySelectorAll('td');
					fields.forEach((f, idx) => {
						if (tds[idx]) tds[idx].textContent = values[f] ?? '';
					});
					const editBtn = row.querySelector('.edit-fraud');
					if (editBtn) {
						editBtn.setAttribute('data-alertid', values['alertId'] ?? '');
						editBtn.setAttribute('data-transactionid', values['transactionId'] ?? '');
						editBtn.setAttribute('data-riskscore', values['riskScore'] ?? '');
						editBtn.setAttribute('data-detectiondate', values['detectionDate'] ?? '');
					}
					break;
				}
			}
		}

		document.getElementById('fraudEditForm')?.addEventListener('submit', (e) => handleEditSubmit(e, 'fraudTableBody', 'alertId', ['alertId','transactionId','riskScore','detectionDate']));
	</script>

</body>
</html>
