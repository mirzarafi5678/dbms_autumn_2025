<%- include('../../partials/head') %>
</head>
<body class="bg-gradient-to-br from-slate-900 via-blue-900 to-slate-900 min-h-screen text-white">
  <%- include('../../partials/admin-nav') %>

  <div class="container mx-auto p-6">
    <h1 class="text-3xl font-bold mb-6 text-center">Fraud Alert Management</h1>

    <!-- Search bar -->
    <div class="flex justify-between mb-4">
      <form method="GET" action="/Admin/fraud/search" class="flex gap-2">
        <input type="text" name="query" placeholder="Search by Alert ID..." 
               class="px-3 py-2 rounded-lg text-black" />
        <button type="submit" class="bg-blue-600 px-4 py-2 rounded-lg hover:bg-blue-700">Search</button>
      </form>

      <!-- Add button -->
      <button onclick="openAddModal()" class="bg-green-600 px-4 py-2 rounded-lg hover:bg-green-700">
        Add Alert
      </button>
    </div>

    <!-- Table -->
    <div class="overflow-x-auto">
      <table class="min-w-full border border-gray-700 rounded-lg">
        <thead class="bg-blue-800 text-white">
          <tr>
            <th class="px-4 py-2 border">Alert ID</th>
            <th class="px-4 py-2 border">Transaction ID</th>
            <th class="px-4 py-2 border">Risk Score</th>
            <th class="px-4 py-2 border">Detection Date</th>
            <th class="px-4 py-2 border">Actions</th>
          </tr>
        </thead>
        <tbody>
          <% if (FraudList && FraudList.length > 0) { %>
            <% FraudList.forEach(alert => { %>
              <tr class="hover:bg-slate-800 transition">
                <td class="px-4 py-2 border"><%= alert.alertId %></td>
                <td class="px-4 py-2 border"><%= alert.transactionId %></td>
                <td class="px-4 py-2 border"><%= alert.riskScore %></td>
                <td class="px-4 py-2 border"><%= alert.detectionDate %></td>
                <td class="px-4 py-2 border flex gap-2">
                  <button onclick="openEditModal(<%= JSON.stringify(alert) %>)"
                          class="bg-yellow-500 px-3 py-1 rounded-lg hover:bg-yellow-600">
                    Edit
                  </button>

                  <form action="/Admin/fraud/delete/<%= alert.alertId %>" method="POST">
                    <button type="submit" class="bg-red-600 px-3 py-1 rounded-lg hover:bg-red-700">
                      Delete
                    </button>
                  </form>
                </td>
              </tr>
            <% }) %>
          <% } else { %>
            <tr>
              <td colspan="5" class="text-center py-4">No fraud alerts available</td>
            </tr>
          <% } %>
        </tbody>
      </table>
    </div>
  </div>

  <!-- Add Modal -->
  <div id="addModal" class="hidden fixed inset-0 bg-black bg-opacity-50 flex justify-center items-center">
    <div class="bg-slate-800 p-6 rounded-lg w-96">
      <h2 class="text-xl mb-4">Add New Fraud Alert</h2>
      <form method="POST" action="/Admin/fraud/add">
        <input type="text" name="transactionId" placeholder="Transaction ID" class="w-full p-2 mb-3 rounded text-black" required>
        <input type="number" step="0.01" name="riskScore" placeholder="Risk Score" class="w-full p-2 mb-3 rounded text-black" required>
        <input type="date" name="detectionDate" class="w-full p-2 mb-3 rounded text-black" required>

        <div class="flex justify-end gap-2">
          <button type="button" onclick="closeAddModal()" class="bg-gray-600 px-3 py-1 rounded-lg hover:bg-gray-700">Cancel</button>
          <button type="submit" class="bg-green-600 px-3 py-1 rounded-lg hover:bg-green-700">Save</button>
        </div>
      </form>
    </div>
  </div>

  <!-- Edit Modal -->
  <div id="editModal" class="hidden fixed inset-0 bg-black bg-opacity-50 flex justify-center items-center">
    <div class="bg-slate-800 p-6 rounded-lg w-96">
      <h2 class="text-xl mb-4">Edit Fraud Alert</h2>
      <form id="editForm" method="POST">
        <input type="text" name="alertId" id="editAlertId" placeholder="Alert ID" class="w-full p-2 mb-3 rounded text-black" readonly>
        <input type="text" name="transactionId" id="editTransactionId" placeholder="Transaction ID" class="w-full p-2 mb-3 rounded text-black" required>
        <input type="number" step="0.01" name="riskScore" id="editRiskScore" placeholder="Risk Score" class="w-full p-2 mb-3 rounded text-black" required>
        <input type="date" name="detectionDate" id="editDetectionDate" class="w-full p-2 mb-3 rounded text-black" required>

        <div class="flex justify-end gap-2">
          <button type="button" onclick="closeEditModal()" class="bg-gray-600 px-3 py-1 rounded-lg hover:bg-gray-700">Cancel</button>
          <button type="submit" class="bg-yellow-500 px-3 py-1 rounded-lg hover:bg-yellow-600">Update</button>
        </div>
      </form>
    </div>
  </div>

  <script>
    // --- Add Modal ---
    function openAddModal() {
      document.getElementById('addModal').classList.remove('hidden');
    }
    function closeAddModal() {
      document.getElementById('addModal').classList.add('hidden');
    }

    // --- Edit Modal ---
    function openEditModal(alert) {
      document.getElementById('editTid').value = alert.tid;
      document.getElementById('editRiskScore').value = alert.riskScore;
      document.getElementById('editAccuracyScore').value = alert.accuracyScore;
      document.getElementById('editDetectionDate').value = alert.detectionDate;
      document.getElementById('editSummary').value = alert.summary;

      document.getElementById('editForm').action = `/admin/fraud/edit/${alert.alertId}`;
      document.getElementById('editModal').classList.remove('hidden');
    }
    function closeEditModal() {
      document.getElementById('editModal').classList.add('hidden');
    }
  </script>
</body>
</html>
